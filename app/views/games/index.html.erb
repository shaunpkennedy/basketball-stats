<h1>Games</h1>

<%= link_to 'New Game', new_team_game_path(@team) %>

<% if @games.any? %>
  <table>
    <thead>
      <tr>
        <th>Date</th>
        <th>Opponent Team Name</th>
        <th>City</th>
        <th>Is Victory</th>
        <th>Is Home Team</th>
        <th>Score</th>
        <th>Opponent Score</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @games.each do |game| %>
        <tr>
          <td><%= game.date %></td>
          <td><%= game.opponent_team_name %></td>
          <td><%= game.city %></td>
          <td><%= game.is_victory %></td>
          <td><%= game.is_home_team %></td>
          <td><%= game.score %></td>
          <td><%= game.opponent_score %></td>
          <td><%= link_to 'Show', team_game_path(@team, game) %></td>
          <td><%= link_to 'Edit', edit_team_game_path(@team, game) %></td>
          <td><%= link_to 'Destroy', team_game_path(@team, game), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>No games found.</p>
<% end %>

<%= link_to 'Back', team_path(@team) %>
