<%= form_with model: player do |form| %>
    <%= render "shared/form_errors", form: form %>

    <div class="mb-3">
        <%= form.label :name %>
        <%= form.text_field :name, class: "form-control" %>
    </div>

    <%= form.button "Save", class: "btn btn-primary", data: {turbo: "false"} %>

<% end %>